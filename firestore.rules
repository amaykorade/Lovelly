rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection - users can read/write their own document
    match /users/{userId} {
      // Allow read if user is authenticated and accessing their own document
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Allow create if user is authenticated and creating their own document
      allow create: if request.auth != null && request.auth.uid == userId;
      
      // Allow update if user is authenticated and updating their own document
      allow update: if request.auth != null && request.auth.uid == userId;
      
      // Allow delete if user is authenticated and deleting their own document
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Couples collection - users can read/write if they're part of the couple
    match /couples/{coupleId} {
      // Allow read if user is authenticated (needed to check if code exists when joining)
      allow read: if request.auth != null;
      
      // Allow create if user is authenticated and sets themselves as owner
      allow create: if request.auth != null && 
        request.resource.data.ownerId == request.auth.uid;
      
      // Allow update if:
      // 1. User is already the owner or partner, OR
      // 2. User is trying to join (setting themselves as partnerId when partnerId is currently null)
      allow update: if request.auth != null && 
        ((resource.data.ownerId == request.auth.uid || 
          resource.data.partnerId == request.auth.uid) ||
         // Allow joining: user sets themselves as partner when partnerId is null
         (request.resource.data.partnerId == request.auth.uid && 
          resource.data.partnerId == null));
      
      // Allow delete if user is authenticated and is the owner
      allow delete: if request.auth != null && 
        resource.data.ownerId == request.auth.uid;
    }
    
    // Messages collection - users can read/write messages in their couple's chat
    match /messages/{messageId} {
      // Allow read if user is authenticated and is part of the couple
      allow read: if request.auth != null;
      
      // Allow create if user is authenticated
      allow create: if request.auth != null && 
        request.resource.data.senderId == request.auth.uid;
      
      // Allow update/delete only by the sender
      allow update, delete: if request.auth != null && 
        resource.data.senderId == request.auth.uid;
    }
    
    // Events collection (calendar) - users can read/write events in their couple's calendar
    match /events/{eventId} {
      // Allow read if user is authenticated
      allow read: if request.auth != null;
      
      // Allow create if user is authenticated
      allow create: if request.auth != null;
      
      // Allow update/delete if user is authenticated and is the creator
      allow update, delete: if request.auth != null && 
        resource.data.createdBy == request.auth.uid;
    }
    
    // Default: deny all other access
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

